#include<conio.h>
int main()
{
    int n,number1,number2,result;
    float par;
    char option;
   do{
    printf("\nwhat peration do you?\n");
    printf("press 1 for addition\n");
    printf("press 2 for subtraction\n");
    printf("press 3 for multiplication\n");
    printf("press 4 for division\n");
    printf("press 5 for percentage\n");

    scanf("%d",&n);
    printf("please enter a number\n");
    scanf("%d",&number1);
    printf("please enter a second number\n");
    scanf("%d",&number2);
switch(n){
  case 1:
      result =number1+number2;
      printf("Addition to number is %d",result);
      break;
  case 2:
    result=number1-number2;
    printf("Subtraction to number is %d",result);
    break;
  case 3:
    result=number1*number2;
    printf("multiplication to number %d",result);
    break;
  case 4:
    result=number1/number2;
    printf("division to number is %d",result);
    break;
  case 5:
    result =number1+number2;
      par=result*0.15;
    printf("total Taka  %d ",result);
    printf("total vat is %f",par);
    break;
  default:
    printf("your input is wrong!!");
    break;
}
printf("\n Do you continue? y/n \n");
 option=getche();
  //printf("please enter a second number\n");


}while(option=='y');
    getch();
    return 0;
}

